<div class="container">
  <h1 class="d-flex justify-content-center">Adresses utiles</h1>
  <div class="row">
    <div class="col-6">
      <% @organizations.each do |organization| %>
      <%= link_to (cl_image_tag organization.photo, height: 80, width: 160, crop: :fill) %>
      <h2><%= organization.name %></h2>
      <p><%= organization.adress %></p>
      <p><%= organization.phone_number %></p>
      <p><%= organization.website %></p>
      <br>
      <% end %>
    </div>
    <div class="col-6">
      <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
