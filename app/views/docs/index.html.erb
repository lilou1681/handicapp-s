<div class="container">
  <h2 class="row d-flex justify-content-center">Vos documents</h2>
<div class="row d-flex justify-content-center">
    <% @child.docs.each do |doc| %>
    <div class="card-doc" >
      <p class="d-flex justify-content-center"><%= doc.name %></p>
      <p class="d-flex justify-content-center"><%= doc.created_at %></p>
       <div class="d-flex justify-content-center">
      <%= link_to cl_image_path doc.file do %>
      <%= cl_image_tag(doc.file, { size: '250x350', crop: :thumb, format: :jpeg, class: "img-responsive thumbnail"}) %>
      <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
